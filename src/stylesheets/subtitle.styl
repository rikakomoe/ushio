@import "./mixins.styl"

.ushio-player {
  .ushio-player-subtitle-wrap {
    position absolute
    bottom 25px
    z-index 40
    display flex
    flex-direction column
    width 100%

    .ushio-player-subtitle {
      display block
      text-align center
      color #fff
      word-wrap break-word
      font-size 1.25em
      font-weight 500
      text-shadow: -1px -1px 0 #000,
              1px -1px 0 #000,
              -1px 1px 0 #000,
              1px 1px 2px #000
    }
  }
}