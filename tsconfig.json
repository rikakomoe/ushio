{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5", "es6", "es2015", "es7", "es2016", "es2017", "dom"],
    "jsx": "react",
    "experimentalDecorators": true,
    "allowJs": true
  },
  "include": [
    "./src/**/*",
    "./demo/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}